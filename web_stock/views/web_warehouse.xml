<odoo>

	<template id="webclient_warehouse" name="Warehouse Web Client">
		<t t-call="web.layout">
			<t t-set="head">
				<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
				<meta http-equiv="content-type" content="text/html; charset=utf-8" />
				<title>Warehouse</title>

				<t t-call-assets="web.assets_common"/>
				<script type="text/javascript">
					odoo.define('web.csrf', function (require) {
						var token = "<t t-esc="request.csrf_token(None)"/>";
						require('web.core').csrf_token = token;
						require('qweb').default_dict.csrf_token = token;
					});
					odoo.db_info = <t t-raw="db_info"/>;
				</script>
				<t t-call-assets="web.assets_backend"/>

				<script type="application/javascript"
                        src="/web_stock/static/src/js/mixins.js"
						/>
				<script type="application/javascript"
                        src="/web_stock/static/src/js/barcode.js"
						/>
				<script type="application/javascript"
                        src="/web_stock/static/src/js/picking.js"
						/>
				<script type="application/javascript"
                        src="/web_stock/static/src/js/search.js"
						/>

                <link rel="stylesheet" href="/web_stock/static/src/css/web_stock.css"/>

				&lt;!--[if lte IE 9]&gt; <link rel="stylesheet" href="/web/static/src/css/ie.css"/> &lt;![endif]--&gt;
				<script type="text/javascript">
					$(function() {
						<t t-if="init">
							<t t-raw="init"/>
						</t>
						<t t-if="not init">
							odoo.define('web.web_client', function (require) {
								var WebClient = require('web.WebClient');
								var web_client = new WebClient();
								web_client.setElement($(document.body));
								web_client.start();
								return web_client;
							});
						</t>
					});
				</script>

			</t>

			<a href="/web/" class="btn" style="position: absolute; top: 10px; left:10px;">
				<i class="fa fa-home" />
			</a>
			<div id="wrapwrap" style="overflow-y: visible;">
				<main barcode_events="true" class="js_picking_form_barcode">
					<input class="hidden"
						   id="barcodeNomenclatureId"
						   t-att-value="barcode_nomenclature" />
					<t t-raw="0"/>
				</main>
			</div>

		</t>
	</template>
	
	<template id="menu">
		<!-- Add some sort of menu or something -->
	</template>
	
	<template id="buttons">
		<buttons />
	</template>

</odoo>
